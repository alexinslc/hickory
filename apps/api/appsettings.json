{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=hickory;Username=hickory;Password=hickory_dev_password",
    "Redis": "localhost:6379"
  },
  "Database": {
    "MinPoolSize": 2,
    "MaxPoolSize": 20,
    "ConnectionLifetimeSeconds": 600,
    "ConnectionIdleLifetimeSeconds": 300,
    "ConnectionTimeoutSeconds": 15,
    "CommandTimeoutSeconds": 30,
    "EnablePooling": true,
    "EnableRetryPolicy": true,
    "RetryCount": 3,
    "RetryDelaySeconds": 2,
    "EnableCircuitBreaker": true,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 60
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "AuthPermitLimit": 10,
    "AuthWindowMinutes": 1
  },
  "JWT": {
    "Secret_Comment": "DEVELOPMENT ONLY: This secret is for local development. In production, override via environment variable or a secrets manager.",
    "Secret": "your-super-secret-jwt-key-at-least-32-characters-long-change-in-production",
    "Issuer": "hickory-api",
    "Audience": "hickory-web",
    "ExpirationMinutes": "60"
  },
  "FileStorage": {
    "StorageRootPath": "storage/attachments"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
